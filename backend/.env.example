# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration (Local Development)
MONGODB_URI=mongodb://localhost:27017/agfit

# Database Configuration (Production - MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agfit?retryWrites=true&w=majority

# JWT Secret (Generate a secure random string for production)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# CORS Configuration (Frontend URL)
FRONTEND_URL=http://localhost:5173

# Production Environment Variables
# NODE_ENV=production
# PORT=5000
# JWT_SECRET=your-production-jwt-secret-64-characters-long
# OPENAI_API_KEY=sk-your-production-openai-api-key
# FRONTEND_URL=https://your-app.vercel.app
